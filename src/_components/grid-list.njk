---
css: | 
  .grid-list { 
      display: grid; 
      grid-template-columns: repeat(auto-fill, minmax(min(100%, var(--auto-grid-min-size)), 1fr));
      grid-gap: 0.5em;
      list-style: none;
      margin: 0;
      margin-bottom: 2em;
  }
  
  .grid-list > li > a { 
      padding: 1em;
      text-decoration: none;
      display: block;
      text-align: center;
      height: 100%;
    background: var(--bg);

  }

---

<ul class="grid-list"
  {%- if min_width %} style="--auto-grid-min-size: {{ min_width }}"{% endif -%}
  {%- if bg %} style="--bg: {{ bg }}"{% endif -%}
  >
  {{- content | safe -}}
</ul>